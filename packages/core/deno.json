{
  "name": "@kexi/vibe-core",
  "version": "0.15.0",
  "license": "Apache-2.0",
  "repository": "https://github.com/kexi/vibe",
  "exports": {
    ".": "./src/index.ts",
    "./runtime": "./src/runtime/index.ts",
    "./types": "./src/types/config.ts",
    "./errors": "./src/errors/index.ts",
    "./context": "./src/context/index.ts",
    "./context/testing": "./src/context/testing.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "zod": "npm:zod@^3.23.0"
  },
  "compilerOptions": {
    "strict": true
  },
  "lint": {
    "include": [
      "src/"
    ],
    "exclude": [
      "src/runtime/node/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "include": [
      "src/"
    ]
  },
  "test": {
    "include": [
      "src/"
    ]
  },
  "nodeModulesDir": "auto",
  "minimumDependencyAge": "P3D"
}
