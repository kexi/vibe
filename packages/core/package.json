{
  "name": "@kexi/vibe-core",
  "version": "0.18.3",
  "description": "Core components for Vibe - Runtime abstraction, types, errors, and context",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./runtime": {
      "import": "./dist/runtime/index.js",
      "types": "./dist/runtime/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/config.js",
      "types": "./dist/types/config.d.ts"
    },
    "./errors": {
      "import": "./dist/errors/index.js",
      "types": "./dist/errors/index.d.ts"
    },
    "./context": {
      "import": "./dist/context/index.js",
      "types": "./dist/context/index.d.ts"
    },
    "./context/testing": {
      "import": "./dist/context/testing.js",
      "types": "./dist/context/testing.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "fast-glob": "^3.3.3",
    "smol-toml": "^1.6.0",
    "zod": "^3.23.0"
  },
  "optionalDependencies": {
    "@kexi/vibe-native": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsdown": "^0.20.1",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kexi/vibe.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/kexi/vibe#readme",
  "bugs": {
    "url": "https://github.com/kexi/vibe/issues"
  },
  "keywords": [
    "vibe",
    "runtime",
    "node",
    "bun",
    "cross-platform"
  ],
  "author": "kexi",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
