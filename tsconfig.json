{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "types": ["bun-types", "@types/deno"]
  },
  "include": ["main.ts", "packages/core/src/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
