{
  "name": "@kexi/vibe",
  "version": "0.1.5",
  "license": "Apache-2.0",
  "repository": "https://github.com/kexi/vibe",
  "exports": "./main.ts",
  "tasks": {
    "dev": "deno run --allow-run --allow-read --allow-write --allow-env main.ts",
    "compile": "deno run --allow-run --allow-read --allow-write scripts/build.ts",
    "build:deb": "deno run --allow-read --allow-write --allow-run scripts/build-deb.ts",
    "setup:dev": "echo 'Run: source .vibedev'",
    "test": "deno test --allow-read --allow-env --allow-write",
    "test:coverage": "deno test --allow-read --allow-env --allow-write --coverage=coverage",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "check": "deno check main.ts src/**/*.ts",
    "ci": "deno task fmt:check && deno task lint && deno task check && deno task test",
    "check:all": "deno task ci"
  },
  "imports": {
    "@std/cli": "jsr:@std/cli@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/toml": "jsr:@std/toml@^1.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "zod": "npm:zod@^3.23.0"
  },
  "compilerOptions": {
    "strict": true
  },
  "lint": {
    "include": ["src/", "main.ts"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "include": ["src/", "main.ts"]
  },
  "test": {
    "include": ["src/"]
  }
}
