{
  "name": "@kexi/vibe",
  "version": "0.12.5",
  "license": "Apache-2.0",
  "repository": "https://github.com/kexi/vibe",
  "exports": "./main.ts",
  "tasks": {
    "dev": "deno run --allow-run --allow-read --allow-write --allow-env --allow-ffi main.ts",
    "compile": "deno run --allow-run --allow-read --allow-write --allow-env scripts/build.ts --distribution dev",
    "compile:ci": "deno run --allow-run --allow-read --allow-write --allow-env scripts/build.ts",
    "compile:e2e": "deno run --allow-run --allow-read --allow-write --allow-env scripts/build.ts --output vibe-e2e --distribution dev",
    "generate-version": "deno run --allow-run --allow-read --allow-write --allow-env scripts/build.ts --generate-version-only",
    "get-version": "deno eval \"console.log(JSON.parse(Deno.readTextFileSync('deno.json')).version)\"",
    "build:deb": "deno run --allow-read --allow-write --allow-run scripts/build-deb.ts",
    "setup:dev": "echo 'Run: source .vibedev'",
    "test": "deno test --allow-read --allow-env --allow-write --allow-run --allow-ffi",
    "test:coverage": "deno test --allow-read --allow-env --allow-write --allow-run --allow-ffi --coverage=coverage",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "check": "deno check main.ts src/**/*.ts",
    "ci": "deno task fmt:check && deno task lint && deno task check && deno task test",
    "check:all": "deno task ci",
    "sync-version": "deno run --allow-read --allow-write scripts/sync-version.ts"
  },
  "imports": {
    "@std/cli": "jsr:@std/cli@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/toml": "jsr:@std/toml@^1.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "zod": "npm:zod@^3.23.0"
  },
  "compilerOptions": {
    "strict": true
  },
  "lint": {
    "include": [
      "src/",
      "main.ts"
    ],
    "exclude": [
      "src/runtime/node/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "include": [
      "src/",
      "main.ts"
    ]
  },
  "test": {
    "include": [
      "src/"
    ],
    "exclude": [
      "tests/e2e/"
    ]
  },
  "publish": {
    "exclude": [
      "!src/version.ts"
    ]
  },
  "nodeModulesDir": "none",
  "minimumDependencyAge": "P3D"
}
